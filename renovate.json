{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "test"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "test dependencies",
      "matchPackageNames": [
        "/^org.junit/",
        "/^org.mockito/",
        "/^org.assertj/"
      ]
    },
    {
      "matchPackageNames": [
        "io.dropwizard:dropwizard-core",
        "io.dropwizard:dropwizard-testing"
      ],
      "groupName": "dropwizard"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
